{
    "name": "Recipick_COPY",
    "description": "Pick the recipe from any site or blog and save it",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage", 
        "alarms",
        "scripting", 
        "activeTab", 
        "tabs", 
        "unlimitedStorage", 
        "identity"
    ],
    "action": {
        "default_title": "COPY",
        "default_icon": {
            "16": "/images/Icon2 16x16.png",
            "32": "/images/Icon2 32x32.png",
            "64": "/images/Icon2 64x64.png"
        }
    },
    "icons": {
        "16": "/images/Icon2 16x16.png",
        "32": "/images/Icon2 32x32.png",
        "64": "/images/Icon2 64x64.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+Y"
            }
        },
        "_execute_page_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+E"
            }
        }
    }
}